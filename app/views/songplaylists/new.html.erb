 <div class="editar">
    <div class="editor container text-center">
        <h1 class="pb-5 font-weight-bold">Cadastrar nova musica na Playlist<h1>
        <%= form_for @songplaylist, url: songplaylists_path, method: :post do |sp| %>
            <h2 class="font-weight-bold">Músicas</h2>
            <h2><%= sp.collection_select(:song_id, Song.all, :id, :name, {prompt: "Selecionar música"}, { class: 'droplist2' }) %></h2>
            <h2 class="font-weight-bold">playlists</h2>
            <h2 class="pb-3"><%= sp.collection_select(:playlist_id, Playlist.where(listener_id: @current_user.listener.id), :id, :name, {prompt: "Selecionar playlist"}, { class: 'droplist2' }) %></h2>
            <%= sp.submit 'Vincular música', :class => 'botao3'%>
        <% end %>
    </div>
</div> 