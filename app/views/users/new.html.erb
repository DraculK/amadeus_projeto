<div class="bbb">
    <div class="container cc text-center">
        <h1 class="text-light pb-5 font-weight-bold"> Novo Usuário</h1>
        <%= form_with model: @user, url: :new_user, method: :post do |form| %>
        
        <div class="form-group">
            <h2>Nome:</h2>
            <h2><%= form.text_field :name, class: 'textos' %></h2>
        </div>

        <div class="form-group">
            <h2>Email:</h2>
            <h2><%= form.email_field :email, class: 'textos' %></h2>
        </div>
        <div class="form-group">
            <h2>Senha:</h2>
            <h2><%= form.password_field :password, class: 'textos' %></h2>
        </div>
        <div class="form-group">
            <h2>Tipo de usuário:</h2>
            <div class="">
                <%= form.select(:role_id, options_for_select([['Artista',1],['Ouvinte',2]])) %>
            </div>
        </div>

        <%= form.submit "Cadastrar usuário", class: 'butao' %>
    <% end %>
    </div>
</div>
<footer class="copyright">
    <h4><i class="fa fa-copyright" aria-hidden="true"></i> Dev Lee vs Gaara.mp3</h4>
</footer>
