<div class="bbb">
<div class="container cc">
    <h2 class="text-center text-light"> Novo Usuário</h2>
    <%= form_with model: @user, url: :new_user, method: :post do |form| %>
    
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control form-control-lg' %>
    </div>

    <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control form-control-lg' %>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control form-control-lg' %>
    </div>
    <div class="form-group">
        <%= form.label "Tipo de usuário", class: "control-label" %>
        <div class="controls">
            <%= form.select(:role_id, options_for_select([['Artista',1],['Ouvinte',2]])) %>
        </div>
    </div>

    <%= form.submit "Cadastrar usuário", class: 'btn btn-outline-info btn-lg' %>
  <% end %>
</div>
</div>
