<div class="bbb">
<div class="container cc">
    <h2 class="text-center text-light"> Novo Usuário</h2>
    <%= form_with model: @user, url: :new_user, method: :post do |form| %>
    
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    <!-- fazer select tag para ficar mais bonito -->
    <div class="form-group">
        <p>Qual categoria voce se encaixa?</p>
        <%= form.text_field :role_id, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control' %>
    </div>

    <%= form.submit "Cadastrar usuário", class: 'btn btn-outline-info btn-lg' %>
  <% end %>
</div>
</div>
