<div class="criarMusica">
<p id="notice"><%= flash[:notice] %></p>

<h1 class="fonteh1"> Escute suas m√∫sicas preferidas onde quiser. </h1>

<table>
  <% @songs.each do |song| %>
    <tr>
        <td><div id="song-<%= song.id %>"><i class="fa fa-heart-o p-1"></i></div></td>
      <td><%= link_to song.name, song_path(song), style: 'color:black;' %></td>
      <td><%= link_to song.album.name, album_path(song.album), style: 'color:black;' %></td>
      <td><%= button_to 'Edit', edit_song_path(song), method: 'get' , :class=> "btn btn-outline-dark btn-block text-light" %></td>
      <td><%= button_to 'Remove', song_path(song), method: 'delete', data: { confirm: 'Are you sure?' }, :class=> "btn btn-outline-dark btn-block text-light"  %></td>
    </tr>
  <% end %>
</table>
<p><h2><%= link_to "Add a New Song", new_song_path, style: 'color:#FFFFFF;' %></h2></p>
<p><h2><%= link_to "Go to Albums", albums_path, style: 'color:#FFFFFF;' %></h2></p>
</div>
