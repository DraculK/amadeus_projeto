<div class="editar">
    <div class="editor container text-center">
        <h3>Edit a Song</h3>
        <%= form_for @song do |f| %>
            <p>Enter Song's New Name: <%= f.text_field :name, placeholder: "new name", :class=> "btn btn-light btn-block text-dark"  %></p>
            <p>Explicit             : <%= f.check_box :explicit %></p>
            <p>Enter New Album_id   : <%= f.text_field :album_id, :class=> "btn btn-light btn-block text-dark"  %></p>
            <p>Enter New Genre      : <%= f.text_field :genre, placeholder: "new genre", :class=> "btn btn-light btn-block text-dark"  %></p>
            <p>Musica               : <%= f.file_field :song_file, :class=> "btn btn-light btn-block text-dark"  %></p>

            <%= f.submit %>
        <% end %>
    </div>
</div>