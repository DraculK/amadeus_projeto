<div class="bbb">
  <div class="container cc text-center">
    <h1 class="text-center pb-5 font-weight-bold"> Login </h1>
    <%= form_with  url: :login, method: :post do |form| %>
      <div class="form-group">
        <h2>Email:</h2>
        <h2><%= form.email_field :email, class: 'textos' %></h2>
      </div>
      <div class="form-group pb-3">
        <h2>Senha:</h2>
        <h2 class="text-center"><%= form.password_field :password, class: 'textos' %></h2>
      </div>

      <%= form.submit "Entrar", class: 'butao' %>
    <% end %>
  </div>
</div>
<footer class="copyright">
    <h4><i class="fa fa-copyright" aria-hidden="true"></i> Dev Lee vs Gaara.mp3</h4>
</footer>
